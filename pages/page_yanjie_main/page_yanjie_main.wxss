/* pages/page_ggw/page_ggw_add.wxss */
.section{
  display: flex;
  flex:1;
  flex-direction:column;
  background:#ffffff;
}

.section_title{
    display: flex;
    justify-content:center;
    align-content:center;
    font-size: 14rpx;
    padding:10rpx;
    background:#ddd;
}
page{background-color:#edf0f3;}
.nav{width:100%;height:100rpx;display:flex;flex-direction:row;background:#eeeeee;}
.default{line-height:100rpx;text-align:center;flex:1;border-right:1px solid gainsboro;color:#000;font-weight:bold;font-size:36rpx;}
.red{line-height:100rpx;text-align:center;color:#fc5558;flex:1;border-right:1px solid gainsboro;font-weight:bold;font-size:36rpx;}
.show  {display:block;text-align:center;justify-content:center;font-size:30rpx;}
.hidden{display:none;text-align:center;justify-content:center;font-size:30rpx;}


.item-left{flex:5;align-content:center;justify-content:flex-start;}

.item-center{flex:3}

.item-right{flex:1}
.fontBold{font-weight:bold;}
.text36{font-size:36rpx;}
.text24{font-size:24rpx;}
.color_gray{color:#999;}
.color_red{color:red;}

.item-block{
  flex:1;
  flex-grow: 1;
}
.item-box{
  flex-direction: column;
  display: flex;
  width:730rpx;
  margin-left:10rpx;
  border-bottom:1px solid #ddd;
  align-items:flex-start;
}

.item-top{
  flex-direction: row;
  height:39rpx;
  align-items:flex-start;
  align-content:center;
}

.fontBold{font-weight:bold;}
.text36{font-size:36rpx;}
.text24{font-size:24rpx;}
.color_gray{color:#999;}
.color_red{color:red;}

.form-row-item-image-area{
  display: flex;
  justify-content:flex-start;
  align-items:center;
  padding: 20rpx;
  flex-direction: row;
}
.form-row-item-image{
  border:1px solid #eee;
  flex:1;
  height:180rpx;
  width:180rpx;
}

.form-row-item-image-small{
  border:1px solid #ddd;
  flex:1;
  height:110rpx;
  width:110rpx;
}

.form-row-item-image-small-blue{
  border:1px solid #ddd;
  flex:1;
  height:110rpx;
  width:110rpx;
  margin-left:10rpx;
}
.btn_show{
  margin-left:16rpx;
  display:block;
  width:150rpx;
  background:#FFCE44;
}

.hide{
  display:none;
}